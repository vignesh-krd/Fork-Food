<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:id="@+id/dl_home"
    android:background="@color/yellow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_home_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="590dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_name"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/ic_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/img_home_name"
            app:layout_constraintStart_toStartOf="@+id/img_home_name"
            app:layout_constraintTop_toTopOf="@+id/img_home_name"
            app:layout_constraintVertical_bias="0.050000012"
            app:srcCompat="@drawable/ic_home"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/black"
            android:fontFamily="@font/segeo_ui"
            app:layout_constraintEnd_toEndOf="@+id/ic_home"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/ic_home"
            app:layout_constraintTop_toBottomOf="@+id/ic_home" />

        <ImageView
            android:id="@+id/img_home_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logo_home_bg"
            android:layout_marginTop="45dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <ImageButton
            android:id="@+id/img_dinein"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="65dp"
            android:background="@drawable/home_human_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/img_home_bg"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/img_home_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:srcCompat="@drawable/ic_dine_in"/>

        <ImageButton
            android:id="@+id/img_takeaway"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="65dp"
            app:srcCompat="@drawable/ic_take_away"
            android:background="@drawable/home_human_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/img_home_bg"
            app:layout_constraintStart_toStartOf="@id/img_home_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />

        <TextView
            android:id="@+id/tv_dinein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="25dp"
            android:text="DINE\n   IN"
            android:textSize="17dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/segeo_ui"
            app:layout_constraintBottom_toBottomOf="@+id/img_dinein"
            app:layout_constraintEnd_toEndOf="@+id/img_dinein"
            app:layout_constraintStart_toStartOf="@+id/img_dinein"
            app:layout_constraintTop_toTopOf="@+id/img_dinein" />

        <TextView
            android:id="@+id/tv_takeaway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAKE         AWAY"
            android:textColor="@color/grey"
            android:textSize="16dp"
            android:fontFamily="@font/segeo_ui"
            app:layout_constraintBottom_toBottomOf="@id/img_takeaway"
            app:layout_constraintEnd_toEndOf="@id/img_takeaway"
            app:layout_constraintStart_toStartOf="@id/img_takeaway"
            app:layout_constraintTop_toTopOf="@id/img_takeaway"
            app:layout_constraintVertical_bias="0.53" />

        <ImageView
            android:id="@+id/img_home_nav_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rectangle_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="35dp"
            app:srcCompat="@drawable/rectangle_13" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/home_nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>