<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="20dp"
    app:cardElevation="0dp"
    android:foreground="@drawable/cv_outline">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myod_order_number"
            android:text="Order Number - "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myod_order_category"
            android:text="Takeaway"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/tv_myod_order_number"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myod_date"
            android:text="Date of Order"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/segeo_ui"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/tv_myod_order_number"
            app:layout_constraintTop_toBottomOf="@id/tv_myod_order_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myod_dof"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/segeo_ui"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@id/tv_myod_order_category"
            app:layout_constraintTop_toBottomOf="@id/tv_myod_order_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myod_time"
            android:text="Time of Order"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/segeo_ui"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/tv_myod_date"
            app:layout_constraintTop_toBottomOf="@id/tv_myod_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myod_tof"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/segeo_ui"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@id/tv_myod_order_category"
            app:layout_constraintTop_toBottomOf="@id/tv_myod_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myod_price"
            android:text="Paid Price"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/segeo_ui"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/tv_myod_time"
            app:layout_constraintTop_toBottomOf="@id/tv_myod_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myod_paid_price"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/segeo_ui"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@id/tv_myod_order_category"
            app:layout_constraintTop_toBottomOf="@id/tv_myod_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More details"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/segeo_ui"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/tv_myod_price"
            app:layout_constraintTop_toBottomOf="@id/tv_myod_price"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>